{
  "name": "typedconfig",
  "version": "0.0.0-semantic-release",
  "description": "A small, yet powerful typed and structured config library with lambda support for things like AWS Secrets Manager. Written in Typescript.",
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": {
    "typedconfig": "./bin/cli.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "package.json",
    "package-lock.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mhweiner/typedconfig.git"
  },
  "scripts": {
    "test": "npm run build && c8 hoare 'src/**/*.spec.ts' && c8 report -r text -r html",
    "lint": "eslint ./ --ext .js,.ts",
    "build": "rm -rf ./dist && tsc",
    "semantic-release": "semantic-release"
  },
  "homepage": "https://github.com/mhweiner/typedconfig",
  "keywords": [
    "config",
    "typescript config",
    "typed config",
    "lambda config",
    "aws secrets manager",
    "aws parameter store",
    "configuration",
    "loader"
  ],
  "devDependencies": {
    "@types/node": "^17.0.0",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "c8": "^7.10.0",
    "cjs-mock": "^0.1.0",
    "eslint": "^8.4.1",
    "hoare": "^3.0.0",
    "semantic-release": "^18.0.1",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
